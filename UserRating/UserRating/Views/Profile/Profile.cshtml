@model UserRating.Models.User;

@{
}

<h1>Profile</h1>
<br />
<div class="card mb-2">
    <div class="card-header">
        <h5>
            @Model.FirstName @Model.LastName
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Avatar == null)
        {
            <img alt="Empty Avatar" class="avatar-view" src="~/images/empty icon.png">
        }
        else
        {
            var imgsrc = string.Format("data:image/png;base64," + Convert.ToBase64String(Model.Avatar));

            <img alt="Avatar" class="avatar-view" src="@imgsrc">
        }
        <p>
            <b>Age:</b> @Model.Age
        </p>
        <p>
            <b>City:</b> @Model.City
        </p>
        <p>
            <b>About Me:</b> @Model.AboutMe
        </p>
    </div>
</div>
<br />
<a class="btn btn-primary" asp-controller="Profile" asp-action="Edit">Edit</a>